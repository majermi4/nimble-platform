<script>

    BootstrapDialog.DEFAULT_TEXTS[BootstrapDialog.TYPE_DEFAULT] = 'Informace';
    BootstrapDialog.DEFAULT_TEXTS[BootstrapDialog.TYPE_INFO] = 'Informace';
    BootstrapDialog.DEFAULT_TEXTS[BootstrapDialog.TYPE_PRIMARY] = 'Informace';
    BootstrapDialog.DEFAULT_TEXTS[BootstrapDialog.TYPE_SUCCESS] = 'Úspěch';
    BootstrapDialog.DEFAULT_TEXTS[BootstrapDialog.TYPE_WARNING] = 'Varování';
    BootstrapDialog.DEFAULT_TEXTS[BootstrapDialog.TYPE_DANGER] = 'Nebezpečí';
    BootstrapDialog.DEFAULT_TEXTS['OK'] = 'OK';
    BootstrapDialog.DEFAULT_TEXTS['CANCEL'] = 'Zrušit';
    BootstrapDialog.DEFAULT_TEXTS['CONFIRM'] = 'Potvrdit';

    $(document).ready(function()  {

        $("a.sidebar-toggle").on("click", function() {
            $.post("{{ path("nimble_toggle_sidebar") }}");
        });

        $(".confirm-dialog").on("click", function() {
            var customMsg = $(this).data('confirm-msg');
            var confirmMsg = (customMsg ? customMsg : "Do you want to proceed with the action?");
            var confirmSuccessUri = $(this).attr("href");

            BootstrapDialog.confirm({
                message: confirmMsg,
                callback: function(result) {
                    if(result) {
                        window.location.href = confirmSuccessUri;
                    }
                }.bind(confirmSuccessUri)
            });
            return false;
        });

    });

</script>

